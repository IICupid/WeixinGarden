.container {
  display: flex;
  flex-direction: column;
}
.header-container{
    position:relative;
}
.music-start{
    position:absolute;
    width:102rpx;
    height:110rpx;
    left:50%;
    top:50%;
    margin-left:-51rpx;
    opacity: 0.6;
}
.head-image {
  width: 100%;
  height: 460rpx;
}

.author-date {
  flex-direction: row;
  margin-left: 10rpx;
  margin-top: 10px;
}

.author-date image {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.author-name {
  color: #666;
  margin-left: 20rpx;
  font-size: 30rpx;
  font-weight: 300;
  vertical-align: middle;
}

.author-datetime {
  font-size: 24rpx;
  color: #333;
  vertical-align: middle;
  margin-left: 20rpx;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  vertical-align: middle;
  margin-left: 20rpx;
}

.title {
  color: #4b556c;
  font-size: 36rpx;
  font-weight: 700;
  margin-left: 40rpx;
  margin-top: 30rpx;
  letter-spacing: 2px;
}

.tools {
  margin-top: 20rpx;
}

.circle-image {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.circle-image image{
    width:90rpx;
    height:90rpx;
}
.share-imgage {
  margin-left: 30rpx;
}

.horizion {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail {
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}
