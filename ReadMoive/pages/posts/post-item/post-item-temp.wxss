
.post-container {
  display: flex;
  flex-direction: column;
  align-items: baseline;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  padding: 5px;
}
.post-author-date {
  margin-top: 10px;
  margin-bottom: 20px;
  margin-left: 10rpx;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-author-date text {
  margin-top: 10px;
  margin-bottom: 5px;
  margin-left: 10rpx;
  vertical-align: middle;
  font-size: 26rpx;
  color:#333;
}

.post-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10rpx;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin: 0 auto;
  margin-bottom: 15px;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like {
  font-size: 13px;
  flex-direction: row;
  line-height:16px;
  margin-left:10rpx;
  color:#666;
}
.post-like-image{
    width:16px;
    height:16px;
    margin-left:20rpx;
    margin-right: 10rpx;
    vertical-align: middle;
}
.post-like-font{
    vertical-align: middle;
}